<div class="div-parent shadow">
    <div class="div-form shadow">
        <form method="POST" action="" onsubmit="return true;">
            <h5 class="text">MEMBER LOGIN</h5>
            <div class="input-icons">
                <i class="fa fa-envelope icon"><label> |</label></i>
                <input class="type-text input-field" type="text" placeholder="Username" id="username" name="username"
                    onfocus="changeUnderlineColor('username')" required>
