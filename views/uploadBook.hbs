<div class="container-center">
    <!--enctype="multipart/form-data" băm cái file ra nhiều phần rồi gửi-->
    <form action="" method="POST" enctype="multipart/form-data">
        <label>Thể loại</label>
        <br>
        <select name="selectCategory" id="selectCategory">
            {{#each categories}}
            <option value="{{this.madanhmuc}}">
                {{this.tendanhmuc}}
            </option>
            {{/each}}
        </select>
        <br><br>
        <label>Tên sách</label>
        <input type="text" name="txtTenSach">
        <br><br>
        <label>Tác giả</label>
        <input type="text" name="txtTacGia">
        <br><br>
        <label>Người dịch</label>
        <input type="text" name="txtNguoiDich">
        <br><br>
        <label>Giá tiền(đ)</label>
        <input type="text" name="txtGiaTien" id="price">
        <br><br>
        <label>Nhà cung cấp</label>
        <input type="text" name="txtNhaCungCap">
        <br><br>
        <label>Nhà xuất bản</label>
        <input type="text" name="txtNhaXuatBan">
        <br><br>
        <label>Năm xuất bản</label>
        <input type="text" name="txtNamXuatBan">
        {{!-- Ở đây là một cái Date picker --}}
        <br><br>
        <label>Hình thức</label>
        <input type="text" name="txtHinhThuc">
        <br><br>
        <label>Mô tả</label>
        <textarea type="text" name="txtMota" cols="50" rows="10"></textarea>
        <br><br>
        <div class="custom-file-container" data-upload-id="myUniqueUploadId">
            <label style="font-size: 15px;font-weight: bold;">Tải ảnh lên <a href="javascript:void(0)"
                    class="custom-file-container__image-clear" title="Clear Image">&times;</a></label>
            <label class="custom-file-container__custom-file">
                <input type="file" name="bookImages" class="custom-file-container__custom-file__custom-file-input"
                    accept="image/*" multiple="true" aria-label="Choose File">
                <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
                <span class="custom-file-container__custom-file__custom-file-control">
                    Chọn ảnh
                    <span class="custom-file-container__custom-file__custom-file-control__button"> Browse </span>
                </span>
            </label>
            <div class="custom-file-container__image-preview"></div>
        </div>
        <input type="submit" value="Upload">
    </form>
</div>
<script src="https://unpkg.com/file-upload-with-preview@4.0.2/dist/file-upload-with-preview.min.js"></script>
<script>
    var upload = new FileUploadWithPreview('myUniqueUploadId')
</script>