<div class="container-fluid">
    <div class="row info__product--main">
        <div class="col-sm-1"></div>
        <div class="col-sm-4 content--product">
            <img src="../../image/sp/{{this.product.masp}}/main.jpg" class="image__product--main rounded border-info" alt="main">
            <div class="product--sub border-info">
                {{#each this.imgpro}}
                <img src="../../image/sp/{{masp}}/{{path}}.jpg" alt="sub" class="image__product--sub rounded">
                {{/each}}
            </div>
        </div>
        <div class="col-sm-6 content--product">
            <h4 class="product--name mt-4">{{this.product.tensp}}</h4>
            <div class="row mt-4">
                <div class="col-sm-7">
                    <span class="product--property">Nhà cung cấp:</span><span class="product--value">{{this.product.nhacungcap}}</span>
                </div>
                <div class="col-sm-5">
                    <span class="product--property">Tác giả:</span><span class="product--value">{{this.detailpro.tacgia}}</span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-7">
                    <span class="product--property">Nhà xuất bản:</span><span class="product--value">{{this.detailpro.nxb}}</span>
                </div>
                <div class="col-sm-5">
                    <span class="product--property">Hình thức bìa:</span><span class="product--value">{{this.detailpro.hinhthuc}}</span>
                </div>
            </div>
            <p class="product--value mt-5" style="font-size: 30px; padding-left: 0;">{{format this.product.giatien}} đ</p>
            <span>Chính sách đổi trả:</span><span class="ml-5">Đổi trả sản phẩm trong 30 ngày</span>
            <div class="product__number mt-3">
                <label style="font-weight: bold;">Số lượng</label>
                <div class="quantity--box">
                    <i class="fa fa-minus btn__qty btn__qty--subtract" aria-hidden="true" onclick="substractQty()"></i>
                    <input id="qty__input" class="quantity__input--text" type="text" value="1">
                    <i class="fa fa-plus btn__qty btn__qty--plus" aria-hidden="true" onclick="addQty()"></i>
                </div>
            </div>
            <a name="" id="addToCard" class="btn btn__addToCart mt-3" href="#" role="button"><i class="fa fa-cart-plus" aria-hidden="true"></i> Thêm vào giỏ hàng</a>
            <div class="description mt-3">
                <p>{{this.detailpro.mota}}</p>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <div class="row topProducts">
  <div class="myTittle mt-5">
    <h3>Top 5 sản phẩm gần đây nhất</h3>
    <hr>
  </div>
    <div class="mygroupcard card-deck">
     {{#each topTimeEnd}}
     <div class="col-sm-2 mb-3">
                    <div class="card h-100" onclick="detailItem()">
                        <div class="card-body">
                            <img src="../../image/01/book-hor-11.jpg" class="card-img-top" alt="...">
                            <h5 class="card-title mb-4">{{ProName}}</h5>
                            <p class="card-text text-center">
                                {{format Price}} đ</p>
                            <p class="card-text"></p>
                            <p class="card-text">
                                <h5 class="text-info" id='{{ProID}}'>
                                </h5>
                            </p>
                        </div>
                        <div class="card-footer text-muted text-center">
                            <a class="btn btn-danger mr-5 w-100 text-light" href="/categories/product/{{ProID}}">Chi tiết</a>
                        </div>

                    </div>
                </div>
    {{/each}}
  </div>

