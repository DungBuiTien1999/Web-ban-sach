                            <p class="card-text text-center">
                                {{format Price}} đ</p>
                            <p class="card-text"></p>
                            <p class="card-text">
                                <h5 class="text-info" id='{{ProID}}'>
                                </h5>
                            </p>
                        </div>
                        <div class="card-footer text-muted text-center">
                            <a class="btn btn-danger mr-5 w-100 text-light" href="/categories/product/{{ProID}}">Chi tiết</a>
                        </div>

                    </div>
                </div>
    {{/each}}
  </div>
</div>

