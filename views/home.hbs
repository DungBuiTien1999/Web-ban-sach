<div class="row">
  <div class="col-sm-3 content--category">
    <div class="card shadow" style="width: 25rem;">
      <div class="card-header">
        Category
      </div>
      <ul class="list-group list-group-flush">
        {{#each lcCategories}}
        <a href="/categories/{{ItemID}}/products"
                class="list-group-item list-group-item-action {{#if isActive}}active{{/if}}">
                {{ItemName}}</a>
                {{!-- <li class="list-group-item"></li> --}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="col-sm-7">
    <div class="row content--slider">
        <img src="../image/home/book-hor-1.jpg" class="image-slider" alt="slider">
        <img src="../image/home/book-hor-2.jpg" class="image-slider" alt="slider">
        <img src="../image/home/book-hor-3.jpg" class="image-slider" alt="slider">
        <img src="../image/home/book-hor-4.jpg" class="image-slider" alt="slider">

        <button class="btn btn--left btn--black" onclick="plusDivs(-1)">&#10094;</button>
        <button class="btn btn--right btn--black" onclick="plusDivs(1)">&#10095;</button>
    </div>

  </div>
  <div class="col-sm-2">

  </div>
</div>

<div class="row topProducts">
  <div class="myTittle">
    <h3>Top 5 sản phẩm gần đây nhất</h3>
    <hr>
  </div>
    <div class="mygroupcard card-deck">
     {{#each topTimeEnd}}
     <div class="col-sm-2 mb-3">
                    <div class="card h-100" onclick="detailItem()">
                        <div class="card-body">
                            <img src="../image/01/book-hor-11.jpg" class="card-img-top" alt="...">
                            <h5 class="card-title mb-4">{{ProName}}</h5>
                            <p class="card-text text-center">
                                {{format Price}} đ</p>
                            <p class="card-text"></p>
                            <p class="card-text">
                                <h5 class="text-info" id='{{ProID}}'>
                                </h5>
                            </p>
                        </div>
                        <div class="card-footer text-muted text-center">
                            <a class="btn btn-danger mr-5 w-100 text-light" href="/categories/product/{{ProID}}">Chi tiết</a>
                        </div>

                    </div>
                </div>
    {{/each}}
  </div>

  <div class="myTittle">
    <h3>Top 5 sản phẩm gần đây nhất</h3>
    <hr>
  </div>
  <div class="mygroupcard card-deck">
